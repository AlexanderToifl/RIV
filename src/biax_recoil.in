variable strainy equal "(ly - v_L0)/v_L0"
variable p1 equal "v_strainx"
variable p2 equal "v_strainy"
variable p3 equal "-pxx/100000"
variable p4 equal "-pyy/100000"
variable p5 equal "-pzz/100000"
